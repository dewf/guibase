module Windowing;

void moduleInit();
void moduleShutdown();

void runloop();
void exitRunloop();

enum MouseButton {
   None,
   Left,
   Middle,
   Right,
   Other
}

interface IWindowDelegate {
   void buttonClicked(int x, int y, MouseButton button);
   void closed();
}

interface IWindow {
   void show();
   void destroy();
}

IWindow createWindow(int width, int height, string title, IWindowDelegate del);
